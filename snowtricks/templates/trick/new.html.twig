{% extends 'base.html.twig' %}

{% block title %}
    Page de création d'un trick
{% endblock %}

{% form_theme form 'trick/_collection.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Page de création d'une figure</h1>
        <div class="row mt-3 mb-5">
            <div class="col">
                <span>Sélectionnez une catégorie..</span>
                {{ form_widget(form.category) }}
            </div>
            <div class="col">
                <span>Ou créez en une nouvelle !</span><br>
                <button type="button" class="btn btn-primary">Créer une catégorie</button>
            </div>
        </div>
        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Créer la figure</button>

        {{ form_end(form) }}
    </div>
{% endblock %}