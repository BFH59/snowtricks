{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="form-custom">
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                {% if hasError %}
                    <div class="alert alert-danger">
                        Une erreur est survenue. Le nom d'utilisateur ou le mot de passe est incorrect.
                    </div>
                {% endif %}
                <div class="bg-light py-3 px-3">
                    <h1>Connectez-vous !</h1>
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="text" name="_username" id="email" class="form-control" placeholder="Saisissez votre email.." required value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Saisissez votre MDP.." required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Se connecter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
