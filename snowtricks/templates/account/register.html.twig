{% extends 'base.html.twig' %}

{% block title %}Créez vous un compte !{% endblock %}

{% block body %}
    <div class="form-custom">
        <div class="container">
            <h1>Créez vous un compte</h1>

            {{ form_start(form) }}

            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary">Créer votre compte</button>

            {{ form_end(form) }}

            <hr>
            <div class="row mt-3">
                    <a class="text-success mt-4 mr-3" href="{{ path('account_login') }}">
                        Déjà un compte ?
                    </a>

                    <a class="text-warning mt-4 ml-3" href="{{ path('forgot_password') }}">
                        Mot de passe oublié ?
                    </a>

            </div>
        </div>
    </div>
{% endblock %}